<section class="content-header">
  <span class="pull-right">
    <%= link_to "New Bus", admin_bus_new_path, class: "btn btn-primary btn-md"%>
  </span>
  <h1>Buses</h1>
  
</section>
<section class="content">
  <table>
    <thead>
      <tr>
  	  <th>Name</th>
  	  <th>Price</th>
  	  <th>Manufacturer</th>
      <th>Model</th>
      <th>Year</th>
      <th>User</th>
      </tr>
    </thead>
    <tbody>
      <% @buses.each do |bus|%>
    	  <tr>
    		<td><%=bus.bus_name%></td>
    		<td><%=bus.price%></td>
    		<td><%=bus.manufacturer%></td>
        <td><%=bus.model%></td>
        <td><%=bus.year%></td>
        <td><%=bus.user.name%></td>
        <td><%=link_to "Edit", "/admin/bus/edit/#{bus.id}", class: 'btn btn-primary'%>
          <%=link_to "Show", "/admin/bus/edit/#{bus.id}", class: 'btn btn-primary'%>
          <%=link_to "Delete", "#", class: 'btn btn-primary'%>
        </td>
    	  </tr>
    	<% end %>
    </tbody>
  </table>
</section>