<section class="content-header">
  <span class="pull-right">
    <%= link_to "Back", admin_car_path, class: "btn btn-primary btn-md"%>
  </span>
  <h1>Edit Car</h1>
  
</section>
<section class="content">
  <%= form_for(@car, url: "/admin/car/edit/#{@car.id}") do |f| %>
    <div class="field">
      <%= f.label :car_name %><br />
      <%= f.text_field :car_name,  class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :make %><br />
      <%= f.text_field :make, class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :model %><br />
      <%= f.text_field :model,  class: "form-control"%>
    </div>

    <div>
      <%= check_box_tag :is_featured %>
      <%= f.label :is_featured %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description,  class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :price %><br />
      <%= f.number_field :price,  class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :manufacturer %><br />
      <%= f.text_field :manufacturer,  class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :year %><br />
      <%= f.text_field :year,  class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :registration_date %><br />
      <%= f.date_field :registration_date, class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :current_password %><i>(we need your current password to confirm your changes)</i>
      <br />
      <%= f.password_field :current_password %>  
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>